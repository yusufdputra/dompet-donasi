<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_small">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:orientation="vertical"
        app:cardCornerRadius="6dp"
        app:cardUseCompatPadding="true"
        tools:ignore="MissingConstraints">

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:paddingVertical="@dimen/_5sdp"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:rowCount="3">

            <TextView
                android:id="@+id/list_nama_kebutuhan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="5"
                android:layout_gravity="fill_horizontal|center_vertical"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_gravity="fill_horizontal|center_vertical"
                android:ellipsize="end"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_sisa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="4"
                    android:layout_gravity="fill_horizontal|center_vertical"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textSize="@dimen/_8sdp"
                    android:text="Sisa Kebutuhan"
                    android:textColor="@color/black_trans" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/list_biaya_kebutuhan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="4"
                        android:layout_gravity="fill_horizontal|center_vertical"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textColor="@color/black" />
                    <ImageView
                        android:id="@+id/iv_add"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_gravity="center_vertical|end"
                        android:contentDescription="Edit"
                        android:visibility="gone"
                        android:src="@drawable/ic_baseline_notification_important_24"
                        />
                </LinearLayout>

            </LinearLayout>


            <ImageView
                android:id="@+id/iv_selesai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:contentDescription="Edit"
                android:src="@drawable/ic_baseline_remove_red_eye_24"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_donate_kebutuhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:contentDescription="Edit"
                android:src="@drawable/ic_baseline_payments_24"
                android:visibility="visible" />
            <ImageView
                android:id="@+id/iv_edit_kebutuhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:contentDescription="Edit"
                android:src="@drawable/ic_baseline_edit_24"
                android:visibility="gone" />

            <TextView
                android:id="@+id/terkumpul"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="5"
                android:ellipsize="start"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textColor="@color/black_text"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/tv_detail_kebutuhan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="5"
                android:ellipsize="end"
                android:maxLines="4"
                android:visibility="gone"
                android:text="Foto RAB"
                android:textColor="@color/blueLink"
                android:textSize="@dimen/_8sdp" />


            <TextView
                android:id="@+id/terkumpul3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="5"
                android:ellipsize="start"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:visibility="gone"
                android:text="Terkumpul (Rp. 200.000)"
                android:textColor="@color/black_text"
                android:textSize="@dimen/_8sdp" />
            <TextView
                android:id="@+id/terkumpul4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="5"
                android:ellipsize="start"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:visibility="gone"
                android:text="Terkumpul (Rp. 200.000)"
                android:textColor="@color/black_text"
                android:textSize="@dimen/_8sdp" />
            <ImageView
                android:id="@+id/iv"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:contentDescription="Edit"
                android:visibility="gone"
                android:src="@drawable/ic_baseline_remove_red_eye_24"
                />
            <TextView
                android:id="@+id/foto_kebutuhan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="5"
                android:ellipsize="start"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:visibility="visible"
                android:text="Lihat foto kebutuhan"
                android:textColor="@color/blueLink"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/tanggal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="5"
                android:ellipsize="start"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:visibility="visible"
                android:text=""
                android:textColor="@color/black_text"
                android:textSize="@dimen/_8sdp" />


        </GridLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>