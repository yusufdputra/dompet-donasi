<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mydonate">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-feature android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher3"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher3_round"
        android:supportsRtl="true"
        xmlns:tools="http://schemas.android.com/tools"
        tools:replace="android:allowBackup"

        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.AdminActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <data android:mimeType="message/rfc822"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.DonasiActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme"/>
        <activity android:name=".activity.SlideViewPagerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme"/>
        <activity android:name=".activity.cekUserSessionActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme"/>
        <activity android:name=".activity.AboutActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme"/>
        <activity
            android:name=".activity.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name=".activity.ProfilActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name=".activity.AuthActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme" />

        <activity
            android:name=".activity.HelperActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name=".activity.TambahProgramUmumActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name=".activity.EditKebutuhanActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name=".activity.TambahKebutuhanActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name=".activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>